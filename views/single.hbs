<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{title}} <span class="badge">{{priority}}</span></h3>
  </div>
  <div class="panel-body">
    {{description}}
  </div>
  <div class="panel-footer">{{date}}</div>
</div>

<form action="/todo/{{id}}?_method=DELETE" method="post">
  <a href="/todo/{{id}}/edit" class="btn btn-warning" type="button">Edit todo</a>
  <button class="btn btn-danger" type="submit">Delete todo</button>
</form>
